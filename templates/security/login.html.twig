{% extends 'base.html.twig' %}

{% block subtitle %}{{ 'Login'|trans }}{% endblock %}

{% block body %}
    <div class="wecontainer">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">
                    <p>{{ error.messageKey|trans }}</p>
                    <button type="button" class="close" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endif %}

            {% if app.user %}
                <div class="">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            <h1 class="sr-only">{{ 'Login'|trans }}</h1>

            <div class="formContainer">
                <div class="formLogo">
                    <img src="{{ asset('images/logo/logo.svg') }}" alt="">
                </div>
                <label for="inputEmail">E-mail</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                <label for="inputPassword">{{ 'Password'|trans }}</label>
                <input type="password" name="password" id="inputPassword" class="form-control mb-5" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button class="btn" type="submit">
                    {{ 'Login'|trans }}
                </button>
                <div class="register">
                    <p><a class="btn btn-outline-primary" href="{{ path('app_register') }}">{{ 'Register'|trans }}</a></p>
                </div>
                <div class="passwordLost">
                    <a href="{{ path('app_forgot_password_request') }}">{{ 'Password lost'|trans }} ?</a>
                </div>
            </div>
            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}


        </form>

    </div>
{% endblock %}
